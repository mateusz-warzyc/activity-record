		<version>1.5.4.RELEASE</version>
	</parent>
	<groupId>de.gast.duo.activityrecord</groupId>
	<artifactId>activity-record</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>war</packaging>
	<name>activity-record</name>

